<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
    <TextView
        android:id="@+id/que_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="우리는 이 앱을 언제 어디서 누가 어떻게 왜 무엇을 하는지?"
        android:maxLines="2"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#2584CF"
        android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/que_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:layout_below="@id/que_title"
            android:text="이론질문"
            android:maxLines="5"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/que_img"
            android:layout_below="@id/que_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"/>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/que_tagRecycler"-->
<!--        android:layout_below="@id/que_img"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="16dp"-->
<!--        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--        android:orientation="horizontal"-->
<!--        android:layout_marginBottom="8dp"/>-->

        <LinearLayout
            android:layout_below="@id/que_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/que_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#636363"
            android:text="날짜"/>


        </LinearLayout>



    </RelativeLayout>

    <View
        android:layout_toRightOf="@id/rl"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#606060"/>

</RelativeLayout>