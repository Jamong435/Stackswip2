<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:orientation="vertical"
    tools:context=".WebActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <EditText
            android:id="@+id/et"
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:hint="www...."
            android:imeOptions="actionSearch"
            android:maxLines="1"
            android:singleLine="true"
            android:textColorHint="#E6DBDB" />

        <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="14dp"
            android:fontFamily="@font/bold"
            android:background="@drawable/bg_button_round"
            android:backgroundTint="#00000000"
            android:onClick="loadsite"
            android:text="search" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:orientation="vertical">

        <WebView
            android:id="@+id/wv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="90"
            android:background="#090000">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3399ff"
                android:background="@drawable/bg_button_round"
                android:onClick="clickbtn"
                android:layout_weight="2"
                android:layout_marginLeft="6dp"
                android:text="잡코리아" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/bt1"
                android:layout_weight="2"
                android:background="@drawable/bg_button_round"
                android:backgroundTint="#0000ee"
                android:onClick="clickbtn2"
                android:text="사람인" />

            <Button
            android:id="@+id/bt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/bt2"
            android:layout_weight="2"
            android:background="@drawable/bg_button_round"
            android:backgroundTint="#025265"
            android:onClick="clickbtn3"
            android:text="원티드" />
            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/bt3"
                android:layout_weight="2"
                android:background="@drawable/bg_button_round"
                android:backgroundTint="#ff6600"
                android:onClick="clickbtn4"
                android:layout_marginRight="6dp"
                android:text="알바몬" />
</LinearLayout>


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>